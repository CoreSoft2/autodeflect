    fi
    DIFF_FILES="{{autobrains_config["zone_files"]}}/$DNET/$(basename $i) $i"
    diff -Ntu $DIFF_FILES
    RT=$?
    if [ $RT -eq 2 ]
    then
      echo "ERROR: There was something wrong with the diff command"
    elif [ $RT -eq 1 ]
    then
      # Check if live zone file is active in another dnet
      local zone_conflict=0
      for d in $DNETS ; do
        if [ "$d" == "$DNET" ]; then
          continue
