for DNET in $DNETS; do
  echo -e "\n\nCurrent list of non-live edges in $DNET dnet: "
  edge_query --dnet $DNET --health pass -s out -m available | sed -e "s/[[:space:]]\+/ /g" | cut -d " " -f1 | sed 's/\.{{dnets[default_dnet] | regex_replace('\.', '\\.')}}//g' | tr '\r\n' ' '
done

echo
exit
